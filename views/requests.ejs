<main class="max-w-4xl mx-auto px-6 py-20">
    <div class="flex justify-between items-end mb-12">
        <h1 class="text-5xl font-black tracking-tighter uppercase">Request <span class="text-gray-300">Board</span></h1>
        <button onclick="document.getElementById('postForm').classList.toggle('hidden')" class="bg-black text-white px-8 py-3 rounded-full text-xs font-bold uppercase tracking-widest">Post Request</button>
    </div>

    <form id="postForm" action="/post-request" method="POST" class="hidden mb-16 bg-gray-50 p-10 rounded-[2.5rem] border border-gray-100">
        <div class="grid grid-cols-2 gap-6 mb-6">
            <input type="number" name="budget" placeholder="Your Budget (₦)" class="bg-white p-4 rounded-2xl outline-none font-bold">
            <input type="text" name="location" placeholder="Preferred Campus/Area" class="bg-white p-4 rounded-2xl outline-none font-bold">
        </div>
        <textarea name="description" placeholder="Tell us what you need..." class="w-full bg-white p-4 rounded-2xl outline-none font-bold mb-6 h-32"></textarea>
        <button type="submit" class="w-full bg-black text-white py-4 rounded-2xl font-black uppercase tracking-widest">Submit Request</button>
    </form>

    <div class="space-y-12">
        <% requests.forEach(req => { %>
            <div class="bg-white border border-gray-50 rounded-[2.5rem] p-8 shadow-sm">
                <div class="flex justify-between mb-4">
                    <span class="text-[10px] font-black uppercase tracking-widest text-gray-400">Request by <%= req.full_name %></span>
                    <span class="text-xl font-black tracking-tighter">₦<%= Number(req.budget).toLocaleString() %></span>
                </div>
                <h3 class="text-2xl font-bold mb-2">Looking in <%= req.preferred_location %></h3>
                <p class="text-gray-500 mb-8 font-medium"><%= req.description %></p>

                <div class="border-t border-gray-50 pt-6">
                    <h4 class="text-[10px] font-black uppercase tracking-widest text-gray-300 mb-4">Replies</h4>
                    <div class="space-y-4 mb-6">
                        <% comments.filter(c => c.request_id === req.id).forEach(comment => { %>
                            <div class="text-sm bg-gray-50 p-4 rounded-2xl">
                                <span class="font-black mr-2 uppercase text-[9px]"><%= comment.full_name %>:</span>
                                <%= comment.message %>
                            </div>
                        <% }) %>
                    </div>

                    <form action="/post-comment/<%= req.id %>" method="POST" class="flex gap-2">
                        <input type="text" name="message" placeholder="Offer a room..." class="flex-1 bg-gray-50 px-6 py-3 rounded-full outline-none text-sm font-medium">
                        <button type="submit" class="bg-black text-white px-6 py-3 rounded-full text-[10px] font-black uppercase">Reply</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</main>